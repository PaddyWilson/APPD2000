<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/name"
              android:id="@+id/txtName" android:layout_column="0"
              android:layout_alignParentTop="true" android:layout_alignParentLeft="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/score"
            android:id="@+id/txtScore" android:layout_column="0"
            android:layout_below="@+id/txtName" android:layout_alignParentLeft="true"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/question"
              android:id="@+id/txtQuestion"
              android:layout_below="@+id/txtScore" android:layout_alignParentLeft="true"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/edtQuestion" android:layout_below="@+id/txtQuestion" android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" android:clickable="false" android:editable="false"
            android:text="edtQuestion" android:minLines="5" android:focusable="false"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="New Button"
            android:id="@+id/btnAnswer1" android:layout_column="0"
            android:minWidth="50dp"
            android:layout_centerVertical="true" android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="New Button"
            android:id="@+id/btnAnswer2" android:layout_column="0"
            android:minWidth="50dp"
            android:layout_below="@+id/btnAnswer1" android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="New Button"
            android:id="@+id/btnAnswer3" android:layout_column="0"
            android:minWidth="50dp"
            android:layout_below="@+id/btnAnswer2" android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/btnAnswer4" android:layout_column="0"
            android:minWidth="50dp"
            android:layout_below="@+id/btnAnswer3" android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>
</RelativeLayout>